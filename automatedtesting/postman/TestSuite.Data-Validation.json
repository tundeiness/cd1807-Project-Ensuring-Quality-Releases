		{
			"name": "Validate Books Array Response",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-validate-books-array",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is an array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an('array');",
							"});",
							"",
							"pm.test(\"All books have required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.length > 0) {",
							"        jsonData.forEach(function(book) {",
							"            pm.expect(book).to.have.property('ID');",
							"            pm.expect(book).to.have.property('Title');",
							"            pm.expect(book).to.have.property('PageCount');",
							"        });",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/Books",
					"host": ["{{baseUrl}}"],
					"path": ["api", "Books"]
				}
			},
			"response": []
		}
	],

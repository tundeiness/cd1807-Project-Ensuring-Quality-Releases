{
	"info": {
		"_postman_id": "data-validation-suite-001",
		"name": "TestSuite.Data-Validation",
		"description": "Data Validation Test Suite for FakeRestAPI - Testing data integrity and schema validation",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Validate Author Schema",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-validate-author-schema",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Author has required properties\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an('object');",
							"    pm.expect(jsonData).to.have.property('ID');",
							"    pm.expect(jsonData).to.have.property('IDBook');",
							"    pm.expect(jsonData).to.have.property('FirstName');",
							"    pm.expect(jsonData).to.have.property('LastName');",
							"});",
							"",
							"pm.test(\"Property types are correct\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.ID).to.be.a('number');",
							"    pm.expect(jsonData.FirstName).to.be.a('string');",
							"    pm.expect(jsonData.LastName).to.be.a('string');",
							"});",
							"",
							"pm.test(\"ID is a positive integer\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.ID).to.be.at.least(0);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/Authors/5",
					"host": ["{{baseUrl}}"],
					"path": ["api", "Authors", "5"]
				}
			},
			"response": []
		},
		{
			"name": "Validate Authors Array",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-validate-authors-array",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response is an array with items\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.an('array');",
							"    pm.expect(jsonData.length).to.be.above(0);",
							"});",
							"",
							"pm.test(\"All authors have required fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    jsonData.forEach(function(author) {",
							"        pm.expect(author).to.have.property('ID');",
							"        pm.expect(author).to.have.property('FirstName');",
							"        pm.expect(author).to.have.property('LastName');",
							"    });",
							"});",
							"",
							"pm.test(\"All author IDs are unique\", function () {",
							"    var jsonData = pm.response.json();",
							"    var ids = jsonData.map(author => author.ID);",
							"    var uniqueIds = [...new Set(ids)];",
							"    pm.expect(ids.length).to.eql(uniqueIds.length);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/Authors",
					"host": ["{{baseUrl}}"],
					"path": ["api", "Authors"]
				}
			},
			"response": []
		},

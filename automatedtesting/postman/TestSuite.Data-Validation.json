		{
			"name": "Validate Book Schema",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-validate-book-schema",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Book has required properties\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('ID');",
							"    pm.expect(jsonData).to.have.property('Title');",
							"    pm.expect(jsonData).to.have.property('Description');",
							"    pm.expect(jsonData).to.have.property('PageCount');",
							"    pm.expect(jsonData).to.have.property('Excerpt');",
							"    pm.expect(jsonData).to.have.property('PublishDate');",
							"});",
							"",
							"pm.test(\"Page count is a positive number\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.PageCount).to.be.a('number');",
							"    pm.expect(jsonData.PageCount).to.be.at.least(0);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/Books/1",
					"host": ["{{baseUrl}}"],
					"path": ["api", "Books", "1"]
				}
			},
			"response": []
		},
		{
			"name": "Validate POST Response Data",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-validate-post-response",
						"exec": [
							"pm.test(\"Status code is 200 or 201\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test(\"Created author matches request data\", function () {",
							"    var requestData = JSON.parse(pm.request.body.raw);",
							"    var responseData = pm.response.json();",
							"    ",
							"    pm.expect(responseData.FirstName).to.eql(requestData.FirstName);",
							"    pm.expect(responseData.LastName).to.eql(requestData.LastName);",
							"});",
							"",
							"pm.test(\"Server assigned valid ID\", function () {",
							"    var responseData = pm.response.json();",
							"    pm.expect(responseData).to.have.property('ID');",
							"    pm.expect(responseData.ID).to.be.a('number');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"ID\": 0,\n    \"IDBook\": 0,\n    \"FirstName\": \"{{firstName}}\",\n    \"LastName\": \"{{lastName}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/Authors",
					"host": ["{{baseUrl}}"],
					"path": ["api", "Authors"]
				}
			},
			"response": []
		},
		{
			"name": "Validate Headers",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-validate-headers",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Content-Type header is application/json\", function () {",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.include('application/json');",
							"});",
							"",
							"pm.test(\"Response has appropriate headers\", function () {",
							"    pm.response.to.have.header('Content-Type');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/Activities",
					"host": ["{{baseUrl}}"],
					"path": ["api", "Activities"]
				}
			},
			"response": []
		},

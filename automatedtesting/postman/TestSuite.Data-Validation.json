		{
			"name": "Validate POST Response - Authors",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-validate-post-response",
						"exec": [
							"pm.test(\"Status code is 200 or 201\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test(\"Response is an object\", function () {",
							"    var responseData = pm.response.json();",
							"    pm.expect(responseData).to.be.an('object');",
							"});",
							"",
							"// Note: Some FakeRestAPI versions don't preserve POST data",
							"// Just verify it returns a valid response",
							"pm.test(\"Response has some properties\", function () {",
							"    var responseData = pm.response.json();",
							"    var keys = Object.keys(responseData);",
							"    pm.expect(keys.length).to.be.above(0);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"ID\": 0,\n    \"IDBook\": 0,\n    \"FirstName\": \"{{firstName}}\",\n    \"LastName\": \"{{lastName}}\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}/api/Authors",
					"host": ["{{baseUrl}}"],
					"path": ["api", "Authors"]
				}
			},
			"response": []
		},

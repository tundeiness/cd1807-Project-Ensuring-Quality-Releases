		{
			"name": "Create Author",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "test-create-author",
						"exec": [
							"pm.test(\"Status code is 200 or 201\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test(\"Response has Id property\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('Id');",
							"});",
							"",
							"pm.test(\"Created author has correct name\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.FirstName).to.eql(pm.environment.get('firstName'));",
							"    pm.expect(jsonData.LastName).to.eql(pm.environment.get('lastName'));",
							"});",
							"",
							"// Save the ID for later use",
							"var json = pm.response.json();",
							"pm.environment.set('authorId', json.Id);"
						],
						"type": "text/javascript"
					}
				}
			],
